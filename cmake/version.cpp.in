#include "uvgv3crtp/version.h"

#include <cstdint>
#include <string>

namespace uvgV3CRTP {

#ifdef UVGV3CRTP_RELEASE_COMMIT
    std::string get_version() { return "@uvgv3crtp_VERSION@-release"; }
#else
    std::string get_version() { return "@uvgv3crtp_VERSION@-@uvgv3crtp_GIT_HASH@"; }
#endif

uint16_t get_version_major() { return @uvgv3crtp_VERSION_MAJOR@; }

uint16_t get_version_minor() { return @uvgv3crtp_VERSION_MINOR@; }

uint16_t get_version_patch() { return @uvgv3crtp_VERSION_PATCH@; }

std::string get_git_hash() {return "@uvgv3crtp_GIT_HASH@";}
}